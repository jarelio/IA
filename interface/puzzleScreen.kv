		PButton:
			id: 7
			text: "7"
			top_hint:0.35
			right_hint:0.35
			pos_hint: {'top':self.top_hint,'right':self.right_hint}
			on_release: root.buttonAction(self)
		PButton:
			id: 8
			text: "8"
			top_hint:0.35
			right_hint:0.60
			pos_hint: {'top':self.top_hint,'right':self.right_hint}
			on_release: root.buttonAction(self)
		Button:
			text: "Undo"
			size_hint: (0.22,0.10)
			background_color: (2.55,.49,.46,1)
			pos_hint: {'top':0.12,'right':0.6}
			font_size: '25dp'
			on_press: root.undo()
		Button:
			text: "Resolve"
			size_hint: (0.24,0.10)
			background_color: (2.55,.49,.46,1)
			pos_hint: {'top':0.12,'right':0.9}
			font_size: '25dp'
			on_press: root.resolve()

